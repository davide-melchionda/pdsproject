<Page x:Class="FileShare.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:FileShare"
      mc:Ignorable="d" d:DesignWidth="530"
      Title="Page1"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="0,0,1,0">
        <dragablz:TabablzControl Name="mainTabControl" HorizontalAlignment="Left" Margin="0,0,-1,0" VerticalAlignment="Top" Width="530" BorderThickness="0">
            <!--<dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>-->


            <!-- ############################################################################################################################## -->
            <!-- ###############                                        PEERS TAB                                               ###############-->
            <!-- ############################################################################################################################## -->
            <TabItem Header="On-Line">
                <!--<Grid Background="#FFE5E5E5" Margin="-21,-34,-184,-195" HorizontalAlignment="Left" Width="494">-->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <ListView x:Name="thelist" x:FieldModifier="public" ItemsSource="{Binding peers}" SelectionChanged="ListView_SelectionChanged_1">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="100" Header="On-line">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Ellipse Width="48" Height="48">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Icon}"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Border BorderBrush="{x:Null}" Height="48">
                                                        <TextBlock TextWrapping="Wrap" Text="{Binding Path=Peer.Name}" VerticalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ############################################################################################################################## -->
            <!-- ###############                                        SENDING TAB                                             ###############-->
            <!-- ############################################################################################################################## -->
            <TabItem Header="In uscita">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{Binding sendingJobs}" SelectionChanged="ListView_SelectionChanged_1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="160" Header="In uscita">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Background="Transparent" BorderThickness="0" BorderBrush="Transparent" Margin="0,0,0,0" Name="info_button" Width="48" HorizontalAlignment="Left"
                                                        Style="{StaticResource MaterialDesignFlatButton}" Foreground="#448AFF">
                                                    <Button.Content>
                                                        <StackPanel Orientation="Horizontal" Height="16">
                                                            <materialDesign:PackIcon Kind="InformationOutline" Foreground="#448AFF" Height="16" Width="16" VerticalAlignment="Bottom" />
                                                        </StackPanel>
                                                    </Button.Content>
                                                    <Button.ToolTip>
                                                        <ToolTip Background="{DynamicResource MaterialDesignPaper}">
                                                            <ListView ItemsSource="{Binding Path=Job.Task.Info}" SelectionChanged="ListView_SelectionChanged_1">
                                                                <ListView.View>
                                                                    <GridView>
                                                                        <GridViewColumn Width="160">
                                                                            <GridViewColumn.Header>
                                                                                <TextBlock Name="toolbox_sender" Text="{Binding Path=Job.Task.ReceiverName, StringFormat= 'A {0}'}" 
                                                                                           TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" MaxWidth="210" FontSize="14" TextAlignment="Center"
                                                                                           Foreground="#222222"/>
                                                                            </GridViewColumn.Header>
                                                                            <GridViewColumn.CellTemplate>
                                                                                <DataTemplate>
                                                                                    <TextBlock Text="{Binding Path=Name}" TextTrimming="CharacterEllipsis" MaxWidth="160" Foreground="#222222"/>
                                                                                </DataTemplate>
                                                                            </GridViewColumn.CellTemplate>
                                                                        </GridViewColumn>
                                                                    </GridView>
                                                                </ListView.View>
                                                            </ListView>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                </Button>
                                                <TextBlock Text="{Binding Path=Job.Task.Info[0].Name}" TextTrimming="CharacterEllipsis" MaxWidth="128" Margin="0,8,0,0"/>
                                                <TextBlock Name="and_others" Text="{Binding Path=FilesCountMinusOne, StringFormat= ' e altri {0}'}" 
                                                       TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" MaxWidth="210" Margin="0,8,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=and_others, Path=DataContext.SingleFile}" Value="True">
                                                                    <Setter Property="Visibility" Value="Hidden"></Setter>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Controls:MetroProgressBar Name="SendingProgBar" HorizontalAlignment="Center" 
                                                                       Loaded="ProgBarLoaded" Maximum="100" 
                                                                       Height="10" Width="100" 
                                                                       Background="LightGray"
                                                                       Margin="0,0,0,0">
                                                    <ProgressBar.Style>
                                                        <Style TargetType="ProgressBar">
                                                            <Setter Property="Visibility" Value="Hidden" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=SendingProgBar, Path=DataContext.Preparing}" Value="False">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=SendingProgBar, Path=DataContext.Completed}" Value="True">
                                                                    <Setter Property="Visibility" Value="Hidden" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=SendingProgBar, Path=DataContext.Stopped}" Value="True">
                                                                    <Setter Property="Visibility" Value="Hidden" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ProgressBar.Style>
                                                </Controls:MetroProgressBar>

                                                <ProgressBar Value="35"
                                                         Name="SendingPreparingProgBar"
                                                         IsIndeterminate="True"
                                                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,8,0,0">
                                                    <ProgressBar.Style>
                                                        <Style TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=SendingPreparingProgBar, Path=DataContext.Preparing}" Value="False">
                                                                    <Setter Property="Visibility" Value="Hidden" />
                                                                </DataTrigger>

                                                                <!--<DataTrigger Binding="{Binding ElementName=SendingPreparingProgBar, Path=DataContext.Preparing}" Value="True">
                                                                <Setter Property="Visibility" Value="True" />
                                                            </DataTrigger>-->

                                                            </Style.Triggers>
                                                        </Style>
                                                    </ProgressBar.Style>
                                                </ProgressBar>

                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="70">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Name="SendingTimeLeft" Text="{Binding RemainingTime}" Margin="0,8,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=SendingTimeLeft, Path=DataContext.Completed}" Value="True">
                                                                <Setter Property="Visibility" Value="Hidden" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=SendingProgBar, Path=DataContext.Stopped}" Value="True">
                                                                <Setter Property="Visibility" Value="Hidden" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="140">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Center">
                                                <!--<Button Click="DeactivateJob">X</Button>-->
                                                <Button Name="SendingStopButton"
                                                Foreground="{StaticResource PrimaryAccentBrush}"
                                                ToolTip="Annulla"
                                                FontSize="11"
                                                Click="DeactivateJob">
                                                    <Button.Content>
                                                        <StackPanel Orientation="Horizontal" Height="24">
                                                            <materialDesign:PackIcon Kind="DeleteForever" Foreground="{StaticResource PrimaryAccentBrush}" 
                                                                                 Height="24" Width="24" />
                                                            <TextBlock Text="Annulla" Height="24" Margin="4,6,0,0"/>
                                                        </StackPanel>
                                                    </Button.Content>
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatAccentButton}">
                                                            <Setter Property="Visibility" Value="Hidden" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=SendingStopButton, Path=DataContext.Preparing}" Value="False">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=SendingStopButton, Path=DataContext.Completed}" Value="True">
                                                                    <Setter Property="Visibility" Value="Hidden" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=SendingStopButton, Path=DataContext.Stopped}" Value="True">
                                                                    <Setter Property="Visibility" Value="Hidden" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <TextBlock Name="Information" Text="{Binding Path=Message}" Margin="0,8,0,0" TextTrimming="WordEllipsis" TextWrapping="WrapWithOverflow">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Foreground" Value="{StaticResource PrimaryAccentBrush}"></Setter>
                                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=Information, Path=DataContext.Preparing}" Value="False">
                                                                    <Setter Property="Visibility" Value="Hidden" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=Information, Path=DataContext.Completed}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=SendingProgBar, Path=DataContext.Stopped}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=Information, Path=DataContext.Error}" Value="True">
                                                                    <Setter Property="Foreground" Value="#B71C1C"></Setter>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                        <!--<ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Annulla" Command="{Binding StopSending}" 
                                          CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, 
                                                                                                    Path=PlacementTarget.SelectedItem}" />
                            </ContextMenu>
                        </ListView.ContextMenu>-->
                    </ListView>
                </ScrollViewer>
            </TabItem>




            <!-- ############################################################################################################################## -->
            <!-- ###############                                        RECEIVING TAB                                           ###############-->
            <!-- ############################################################################################################################## -->
            <TabItem Header="In ricezione">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{Binding receivingJobs}" SelectionChanged="ListView_SelectionChanged_1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="160" Header="In uscita">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Background="Transparent" BorderThickness="0" BorderBrush="Transparent" Height="24" Margin="0,0,0,0" Name="info_button"
                                                        Style="{StaticResource MaterialDesignFlatButton}" Foreground="#448AFF">
                                                    <Button.Content>
                                                        <StackPanel Orientation="Horizontal" Height="16">
                                                            <materialDesign:PackIcon Kind="InformationOutline" Foreground="#448AFF" Height="16" Width="16" VerticalAlignment="Bottom" />
                                                        </StackPanel>
                                                    </Button.Content>
                                                    <Button.ToolTip>
                                                        <ToolTip Background="{DynamicResource MaterialDesignPaper}">
