                                                                            </GridViewColumn.Header>
                                                                            <GridViewColumn.CellTemplate>
                                                                                <DataTemplate>
                                                                                    <TextBlock Text="{Binding Path=Name}" TextTrimming="CharacterEllipsis" MaxWidth="160" Foreground="#222222"/>
                                                                                </DataTemplate>
                                                                            </GridViewColumn.CellTemplate>
                                                                        </GridViewColumn>
                                                                    </GridView>
                                                                </ListView.View>
                                                            </ListView>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                </Button>
                                                <TextBlock Text="{Binding Path=Job.Task.Info[0].Name}" TextTrimming="CharacterEllipsis" MaxWidth="160" Margin="0,8,0,0"/>
                                                <TextBlock Name="and_others" Text="{Binding Path=FilesCountMinusOne, StringFormat= ' e altri {0}'}" 
                                                       TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" MaxWidth="210" Margin="0,8,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
