                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Controls:MetroProgressBar Name="ReceivingProgBar" HorizontalAlignment="Center" 
                                                                       Loaded="ProgBarLoaded" Maximum="100" 
                                                                       Height="10" Width="100" 
                                                                       Background="LightGray"
                                                                       Margin="0,0,0,0">
                                                    <ProgressBar.Style>
                                                        <Style TargetType="ProgressBar">
                                                            <Setter Property="Visibility" Value="Hidden" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=ReceivingProgBar, Path=DataContext.Preparing}" Value="False">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=ReceivingProgBar, Path=DataContext.Completed}" Value="True">
                                                                    <Setter Property="Visibility" Value="Hidden" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=ReceivingProgBar, Path=DataContext.Stopped}" Value="True">
                                                                    <Setter Property="Visibility" Value="Hidden" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ProgressBar.Style>
                                                </Controls:MetroProgressBar>

                                                <ProgressBar Value="35"
                                                         Name="ReceivingPreparingProgBar"
                                                         IsIndeterminate="True"
                                                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,8,0,0">
                                                    <ProgressBar.Style>
                                                        <Style TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
                                                            <Setter Property="Visibility" Value="Hidden" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=ReceivingPreparingProgBar, Path=DataContext.Completing}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ElementName=ReceivingPreparingProgBar, Path=DataContext.Copleting}" Value="False">
                                                                    <Setter Property="Visibility" Value="Hidden" />
                                                                </DataTrigger>
                                                                <!--<DataTrigger Binding="{Binding ElementName=ReceivingPreparingProgBar, Path=DataContext.Preparing}" Value="True">
                                                                <Setter Property="Visibility" Value="True" />
                                                            </DataTrigger>-->
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ProgressBar.Style>
                                                </ProgressBar>

                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="70">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Name="ReceivingTimeLeft" Text="{Binding RemainingTime}" Margin="0,8,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=ReceivingTimeLeft, Path=DataContext.Completing}" Value="True">
                                                                <Setter Property="Visibility" Value="Hidden" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=ReceivingTimeLeft, Path=DataContext.Completed}" Value="True">
                                                                <Setter Property="Visibility" Value="Hidden" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=ReceivingProgBar, Path=DataContext.Stopped}" Value="True">
                                                                <Setter Property="Visibility" Value="Hidden" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="140">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Center">
                                                <Button Name="ReceivingStopButton"
                                                Foreground="{StaticResource PrimaryAccentBrush}"
                                                ToolTip="Annulla"
                                                FontSize="11"
                                                Click="DeactivateJob">
                                                    <Button.Content>
                                                        <StackPanel Orientation="Horizontal" Height="24">
                                                            <materialDesign:PackIcon Kind="DeleteForever" Foreground="{StaticResource PrimaryAccentBrush}" 
