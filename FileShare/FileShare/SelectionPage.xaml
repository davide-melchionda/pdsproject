<Page x:Class="FileShare.SelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileShare"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SelectionPage">

    <Grid>
		<StackPanel>
			<TextBlock Name="fileName"  />
			<ListView x:Name="thelist" x:FieldModifier="public" ItemsSource="{Binding peers}" Margin="0,0,-0.8,-1.6">
				<ListView.View>
					<GridView>
						<GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" Width="100"></GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>
			<Button Content="Invia" Click="Button_Click"></Button>
		</StackPanel>
	</Grid>
</Page>
